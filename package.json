{
  "name": "pardis-client",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run version:patch && vite build",
    "build:production": "npm run version:patch && cross-env NODE_ENV=production VITE_API_BASE_URL=https://api.pardistous.ir vite build",
    "build:prod-win": "npm run version:patch && set NODE_ENV=production&& set VITE_API_BASE_URL=https://api.pardistous.ir&& vite build",
    "build:check": "node scripts/check-env.js && npm run build:prod-win",
    "build:minor": "npm run version:minor && npm run build:production",
    "build:major": "npm run version:major && npm run build:production",
    "version:patch": "node scripts/update-version.cjs patch",
    "version:minor": "node scripts/update-version.cjs minor",
    "version:major": "node scripts/update-version.cjs major",
    "version:show": "node scripts/version-helper.cjs current",
    "version:preview": "node scripts/version-helper.cjs preview",
    "version:history": "node scripts/version-helper.cjs history",
    "version:help": "node scripts/version-helper.cjs help",
    "deploy:plesk": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-plesk.ps1",
    "deploy:plesk-minor": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-plesk.ps1 -VersionType minor",
    "deploy:plesk-major": "powershell -ExecutionPolicy Bypass -File scripts/deploy-to-plesk.ps1 -VersionType major",
    "deploy:ftp": "powershell -ExecutionPolicy Bypass -File scripts/ftp-upload.ps1",
    "clear-cache": "node -e \"const {cacheManager} = require('./src/utils/cacheManager.js'); cacheManager.forceClearCache();\"",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-build-classic": "^41.4.2",
    "@tiptap/extension-image": "^3.11.0",
    "@tiptap/extension-link": "^3.11.0",
    "@tiptap/react": "^3.11.0",
    "@tiptap/starter-kit": "^3.11.0",
    "axios": "^1.13.2",
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.0"
  }
}
